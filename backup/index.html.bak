            border-radius: 6px;
            transition: background 0.2s;
            margin-bottom: 8px;
        }

        .bookmark-checkbox-item:hover {
            background: #f9fafb;
        }

        .bookmark-checkbox-item input[type="checkbox"] {
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .bookmark-checkbox-item label {
            flex: 1;
            cursor: pointer;
            font-size: 14px;
            color: #374151;
            font-weight: 500;
        }

        /* Saved Bookmark Item */
        .saved-bookmark-item {
            padding: 15px;
            background: white;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            margin-bottom: 12px;
