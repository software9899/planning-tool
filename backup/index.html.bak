    <!-- Dashboard Dropdown Script -->
    <script>
        // Dashboard Dropdown Toggle
        document.addEventListener('DOMContentLoaded', function() {
            const dropdownToggle = document.querySelector('.dashboard-dropdown .dropdown-toggle');
            const dropdownMenu = document.querySelector('.dashboard-dropdown .dropdown-menu');

            if (dropdownToggle && dropdownMenu) {
                // Toggle dropdown on click
                dropdownToggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    dropdownMenu.classList.toggle('show');
                });

                // Close dropdown when clicking outside
                document.addEventListener('click', function(e) {
                    if (!e.target.closest('.dashboard-dropdown')) {
                        dropdownMenu.classList.remove('show');
                    }
                });

                // Close dropdown when clicking a menu item
                const dropdownItems = dropdownMenu.querySelectorAll('.dropdown-item');
                dropdownItems.forEach(item => {
                    item.addEventListener('click', function() {
                        dropdownMenu.classList.remove('show');
                    });
                });
            }

            // Profile Dropdown Toggle
            const profileToggle = document.querySelector('.profile-dropdown .dropdown-toggle');
            const profileMenu = document.querySelector('.profile-dropdown .dropdown-menu');

            if (profileToggle && profileMenu) {
                profileToggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    profileMenu.classList.toggle('show');
                    // Close dashboard dropdown if open
                    if (dropdownMenu) dropdownMenu.classList.remove('show');
                });

                document.addEventListener('click', function(e) {
                    if (!e.target.closest('.profile-dropdown')) {
                        profileMenu.classList.remove('show');
                    }
                });
            }

            // Load current user from localStorage
            loadCurrentUser();
        });

        function loadCurrentUser() {
            const currentUserData = localStorage.getItem('currentUser');

            if (!currentUserData) {
                // No user logged in, redirect to login
                // window.location.href = 'login.html';
                // For demo, use default user
                const defaultUser = {
                    name: 'Demo User',
                    email: 'demo@example.com',
                    role: 'member',
                    avatar: 'D'
                };
                // Save default user to localStorage
                localStorage.setItem('currentUser', JSON.stringify(defaultUser));
                updateProfileUI(defaultUser);
                return;
            }

            const user = JSON.parse(currentUserData);
            updateProfileUI(user);
        }

        function updateProfileUI(user) {
            // Update avatar
            const avatar = user.name ? user.name.charAt(0).toUpperCase() : user.email.charAt(0).toUpperCase();
            document.getElementById('profileAvatar').textContent = avatar;
            document.getElementById('profileAvatarLarge').textContent = avatar;

            // Update name
            document.getElementById('profileName').textContent = user.name || 'User';
            document.getElementById('profileDisplayName').textContent = user.name || 'User';

            // Update email
            document.getElementById('profileEmail').textContent = user.email || '';

            // Update role badge
            const roleBadge = document.getElementById('profileRoleBadge');
            const roleText = user.role ? user.role.charAt(0).toUpperCase() + user.role.slice(1) : 'Member';
            roleBadge.textContent = roleText;

            // Show/hide admin-only features
            if (user.role === 'admin') {
                const userManagementLink = document.getElementById('userManagementLink');
                if (userManagementLink) {
                    userManagementLink.style.display = 'flex';
                }
            }
        }

        function viewProfile() {
            alert('UI Demo: View Profile\n\nThis would open the user profile page.');
        }

        function openSettings() {
            // Trigger existing settings button
            const settingsBtn = document.getElementById('settingsBtn');
            if (settingsBtn) {
                settingsBtn.click();
            }
        }

        function logout() {
            if (confirm('‡∏Ñ‡∏∏‡∏ì‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏≠‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏£‡∏∞‡∏ö‡∏ö‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà?')) {
                localStorage.removeItem('currentUser');
                window.location.href = 'login.html';
            }
        }
    </script>
