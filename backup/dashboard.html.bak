        }

        .chart-card.full-width {
            grid-column: 1 / -1;
        }

        .chart-card h2 {
            color: var(--text-primary);
            font-size: 18px;
            margin-bottom: 15px;
        }

        canvas {
            max-height: 300px;
        }

        .chart-card.full-width canvas {
            max-height: 400px;
