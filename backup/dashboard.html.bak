    <script>
        // Load tasks from localStorage
        const tasks = JSON.parse(localStorage.getItem('tasks')) || [];
        const taskTypes = JSON.parse(localStorage.getItem('taskTypes')) || ['Feature', 'Bug', 'Research', 'Documentation'];
        const priorities = JSON.parse(localStorage.getItem('priorities')) || ['High', 'Medium', 'Low'];

        // Update Stats
        function updateStats() {
            const backlog = tasks.filter(t => t.status === 'backlog').length;
            const todo = tasks.filter(t => t.status === 'todo').length;
            const inProgress = tasks.filter(t => t.status === 'inProgress').length;
            const done = tasks.filter(t => t.status === 'done').length;

            document.getElementById('backlogCount').textContent = backlog;
            document.getElementById('todoCount').textContent = todo;
            document.getElementById('progressCount').textContent = inProgress;
            document.getElementById('doneCount').textContent = done;
            document.getElementById('totalCount').textContent = tasks.length;
        }

        // Generate last 7 days dates
        function getLast7Days() {
            const days = [];
            for (let i = 6; i >= 0; i--) {
                const date = new Date();
                date.setDate(date.getDate() - i);
                days.push(date.toISOString().split('T')[0]);
            }
            return days;
        }

        // Get tasks completed on specific date
        function getTasksCompletedOnDate(date) {
            return tasks.filter(t => {
                if (t.status !== 'done') return false;
                const taskDate = new Date(t.createdAt).toISOString().split('T')[0];
                return taskDate === date;
            });
        }

        // Burndown Chart
        function createBurndownChart() {
            const ctx = document.getElementById('burndownChart').getContext('2d');
            const days = getLast7Days();
            
            const totalTasks = tasks.length;
            const remainingTasks = days.map(date => {
                const completedByDate = tasks.filter(t => {
                    if (t.status !== 'done') return false;
                    const taskDate = new Date(t.createdAt).toISOString().split('T')[0];
                    return taskDate <= date;
                }).length;
                return totalTasks - completedByDate;
            });

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: days.map(d => new Date(d).toLocaleDateString('th-TH', { month: 'short', day: 'numeric' })),
                    datasets: [{
                        label: 'Remaining Tasks',
                        data: remainingTasks,
                        borderColor: '#667eea',
                        backgroundColor: 'rgba(102, 126, 234, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: true }
                    },
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            });
        }

        // Stack Bar Chart - Daily Completion by Type
        function createStackBarChart() {
            const ctx = document.getElementById('stackBarChart').getContext('2d');
            const days = getLast7Days();
            
            const datasets = taskTypes.map((type, index) => {
                const colors = ['#667eea', '#f093fb', '#4facfe', '#43e97b', '#fa709a'];
                return {
                    label: type,
                    data: days.map(date => {
                        return getTasksCompletedOnDate(date).filter(t => t.type === type).length;
                    }),
                    backgroundColor: colors[index % colors.length]
                };
            });

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: days.map(d => new Date(d).toLocaleDateString('th-TH', { month: 'short', day: 'numeric' })),
                    datasets: datasets
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: true }
                    },
                    scales: {
                        x: { stacked: true },
                        y: { stacked: true, beginAtZero: true }
                    }
                }
            });
        }

        // Pie Chart - Done Tasks by Type
        function createTypePieChart() {
            const ctx = document.getElementById('typePieChart').getContext('2d');
            const doneTasks = tasks.filter(t => t.status === 'done');
            
            const typeCounts = {};
            taskTypes.forEach(type => {
                typeCounts[type] = doneTasks.filter(t => t.type === type).length;
            });

            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: Object.keys(typeCounts),
                    datasets: [{
                        data: Object.values(typeCounts),
                        backgroundColor: ['#667eea', '#f093fb', '#4facfe', '#43e97b', '#fa709a']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }

        // Pie Chart - Priority Distribution
        function createPriorityPieChart() {
            const ctx = document.getElementById('priorityPieChart').getContext('2d');
            
            const priorityCounts = {};
            priorities.forEach(priority => {
                priorityCounts[priority] = tasks.filter(t => t.priority === priority).length;
            });

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(priorityCounts),
                    datasets: [{
                        data: Object.values(priorityCounts),
                        backgroundColor: ['#ff6b6b', '#ffa726', '#66bb6a']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }

        // Checklist Completion Rate
        function createChecklistChart() {
            const ctx = document.getElementById('checklistChart').getContext('2d');
            
            const tasksWithChecklist = tasks.filter(t => t.checklist && Object.keys(t.checklist).length > 0);
            
            let fullyChecked = 0;
            let partiallyChecked = 0;
            let notChecked = 0;

            tasksWithChecklist.forEach(task => {
                const total = Object.keys(task.checklist).length;
                const checked = Object.values(task.checklist).filter(v => v).length;
                
                if (checked === total) fullyChecked++;
                else if (checked > 0) partiallyChecked++;
                else notChecked++;
            });

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Fully Checked', 'Partially Checked', 'Not Checked'],
                    datasets: [{
                        label: 'Tasks',
                        data: [fullyChecked, partiallyChecked, notChecked],
                        backgroundColor: ['#66bb6a', '#ffa726', '#ff6b6b']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            });
        }

        // Status Overview
        function createStatusChart() {
            const ctx = document.getElementById('statusChart').getContext('2d');
            
            const backlog = tasks.filter(t => t.status === 'backlog').length;
            const todo = tasks.filter(t => t.status === 'todo').length;
            const inProgress = tasks.filter(t => t.status === 'inProgress').length;
            const done = tasks.filter(t => t.status === 'done').length;

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Backlog', 'To Do', 'In Progress', 'Done'],
                    datasets: [{
                        data: [backlog, todo, inProgress, done],
                        backgroundColor: ['#667eea', '#9c27b0', '#ffa726', '#66bb6a']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        }

        // Initialize
        updateStats();
        createBurndownChart();
        createStackBarChart();
        createTypePieChart();
        createPriorityPieChart();
        createChecklistChart();
        createStatusChart();
    </script>

    <!-- Profile Dropdown Script -->
    <script>
        // Profile Dropdown Toggle
        document.addEventListener('DOMContentLoaded', function() {
            const profileToggle = document.querySelector('.profile-dropdown .dropdown-toggle');
            const profileMenu = document.querySelector('.profile-dropdown .dropdown-menu');

            if (profileToggle && profileMenu) {
                profileToggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    profileMenu.classList.toggle('show');
                });

                document.addEventListener('click', function(e) {
                    if (!e.target.closest('.profile-dropdown')) {
                        profileMenu.classList.remove('show');
                    }
                });
            }

            // Load current user from localStorage
            loadCurrentUser();
        });

        function loadCurrentUser() {
            const currentUserData = localStorage.getItem('currentUser');

            if (!currentUserData) {
                // No user logged in, use default user
                const defaultUser = {
                    name: 'Demo User',
                    email: 'demo@example.com',
                    role: 'member',
                    avatar: 'D'
                };
                updateProfileUI(defaultUser);
                return;
            }

            const user = JSON.parse(currentUserData);
            updateProfileUI(user);
        }

        function updateProfileUI(user) {
            // Update avatar
            const avatar = user.name ? user.name.charAt(0).toUpperCase() : user.email.charAt(0).toUpperCase();
            document.getElementById('profileAvatar').textContent = avatar;
            document.getElementById('profileAvatarLarge').textContent = avatar;

            // Update sidebar avatar
            const sidebarAvatar = document.getElementById('sidebarAvatar');
            if (sidebarAvatar) sidebarAvatar.textContent = avatar;

            // Update name
            document.getElementById('profileName').textContent = user.name || 'User';
            document.getElementById('profileDisplayName').textContent = user.name || 'User';

            // Update sidebar name
            const sidebarUserName = document.getElementById('sidebarUserName');
            if (sidebarUserName) sidebarUserName.textContent = user.name || 'User';

            // Update email
            document.getElementById('profileEmail').textContent = user.email || '';

            // Update role badge
            const roleBadge = document.getElementById('profileRoleBadge');
            const roleText = user.role ? user.role.charAt(0).toUpperCase() + user.role.slice(1) : 'Member';
            roleBadge.textContent = roleText;

            // Update sidebar role
            const sidebarUserRole = document.getElementById('sidebarUserRole');
            if (sidebarUserRole) sidebarUserRole.textContent = roleText;

            // Show/hide admin-only features
            if (user.role === 'admin') {
                const userManagementLink = document.getElementById('userManagementLink');
                if (userManagementLink) {
                    userManagementLink.style.display = 'flex';
                }
            }
        }

        function viewProfile() {
            alert('UI Demo: View Profile\n\nThis would open the user profile page.');
        }

