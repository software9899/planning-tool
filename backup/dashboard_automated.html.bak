        // Generate AI insights
        function generateInsights() {
            const container = document.getElementById('insightsContainer');
            container.innerHTML = '';

            const insights = [];

            // Productivity insight
            const velocity = calculateVelocity();
            const avgCycleTime = calculateAverageCycleTime();

            if (velocity > 0 && avgCycleTime > 0) {
                const projectedCompletion = Math.ceil(tasks.filter(t => t.status !== 'done').length / velocity);
                insights.push(`<strong>Projection:</strong> At current velocity (${velocity.toFixed(1)} tasks/week), remaining tasks will take approximately <strong>${projectedCompletion} weeks</strong> to complete.`);
            }

            // Bottleneck insight
            const inProgress = tasks.filter(t => t.status === 'inProgress').length;
            const todo = tasks.filter(t => t.status === 'todo').length;

            if (inProgress > todo && inProgress > 3) {
                insights.push(`<strong>Bottleneck Detected:</strong> More tasks in progress (${inProgress}) than To Do (${todo}). Focus on completing current work before starting new tasks.`);
            }

            // Type distribution insight
            const doneTasks = tasks.filter(t => t.status === 'done');
            const typeDistribution = {};
            taskTypes.forEach(type => {
                typeDistribution[type] = doneTasks.filter(t => t.type === type).length;
            });

            const mostCommonType = Object.keys(typeDistribution).reduce((a, b) =>
                typeDistribution[a] > typeDistribution[b] ? a : b, taskTypes[0]
            );

            if (doneTasks.length > 0) {
                insights.push(`<strong>Most Completed Type:</strong> <strong>${mostCommonType}</strong> accounts for ${((typeDistribution[mostCommonType] / doneTasks.length) * 100).toFixed(0)}% of completed tasks.`);
            }

            // Render insights
            if (insights.length === 0) {
                insights.push('Gather more data to generate insights. Complete tasks to see predictions and recommendations.');
            }

            insights.forEach(insight => {
                const div = document.createElement('div');
                div.className = 'insight-item';
                div.innerHTML = insight;
                container.appendChild(div);
            });
        }

        // Helper: Get last N days
        function getLastNDays(n) {
            const days = [];
            for (let i = n - 1; i >= 0; i--) {
                const date = new Date();
                date.setDate(date.getDate() - i);
                days.push(date.toISOString().split('T')[0]);
            }
            return days;
        }

