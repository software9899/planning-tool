    <script>
        // Global variables
        let tasks = [];
        let taskTypes = [];
        let priorities = [];
        let previousTasksSnapshot = null;
        let charts = {};
        let autoRefreshInterval = null;
        let refreshRate = 5000; // 5 seconds

        // Initialize
        function init() {
            loadData();
            setupAutoRefresh();
            renderDashboard();
        }

        // Load data from localStorage
        function loadData() {
            tasks = JSON.parse(localStorage.getItem('tasks')) || [];
            taskTypes = JSON.parse(localStorage.getItem('taskTypes')) || ['Feature', 'Bug', 'Research', 'Documentation'];
            priorities = JSON.parse(localStorage.getItem('priorities')) || ['High', 'Medium', 'Low'];
        }

        // Setup auto-refresh
        function setupAutoRefresh() {
            const toggle = document.getElementById('autoRefreshToggle');
            const statusEl = document.getElementById('autoRefreshStatus');

            toggle.addEventListener('change', (e) => {
                if (e.target.checked) {
                    startAutoRefresh();
                    statusEl.textContent = 'üü¢ Live';
                } else {
                    stopAutoRefresh();
                    statusEl.textContent = 'üî¥ Paused';
                }
            });

            startAutoRefresh();
        }

        function startAutoRefresh() {
            if (autoRefreshInterval) clearInterval(autoRefreshInterval);

            autoRefreshInterval = setInterval(() => {
                const oldTasksJSON = JSON.stringify(previousTasksSnapshot);
                loadData();
                const newTasksJSON = JSON.stringify(tasks);

                // Only update if data changed
                if (oldTasksJSON !== newTasksJSON) {
                    console.log('Data changed, refreshing dashboard...');
                    renderDashboard();
                    showChangeNotification();
                }
            }, refreshRate);
        }

        function stopAutoRefresh() {
            if (autoRefreshInterval) {
                clearInterval(autoRefreshInterval);
                autoRefreshInterval = null;
            }
        }

        function showChangeNotification() {
            const alertsContainer = document.getElementById('alertsContainer');
            const notification = document.createElement('div');
            notification.className = 'alert-success alert-item';
            notification.innerHTML = `‚ú® Dashboard updated at ${new Date().toLocaleTimeString('th-TH')}`;
            alertsContainer.insertBefore(notification, alertsContainer.firstChild);

            // Remove after 3 seconds
            setTimeout(() => notification.remove(), 3000);
        }

        // Render entire dashboard
        function renderDashboard() {
            previousTasksSnapshot = JSON.parse(JSON.stringify(tasks));

            updateStats();
            generateAlerts();
            generateInsights();
            createAllCharts();
        }

        // Update stats cards
        function updateStats() {
            const backlog = tasks.filter(t => t.status === 'backlog' || t.status === 'backlogReady').length;
            const todo = tasks.filter(t => t.status === 'todo').length;
            const inProgress = tasks.filter(t => t.status === 'inProgress').length;
            const done = tasks.filter(t => t.status === 'done').length;

            document.getElementById('backlogCount').textContent = backlog;
            document.getElementById('todoCount').textContent = todo;
            document.getElementById('progressCount').textContent = inProgress;
            document.getElementById('doneCount').textContent = done;
            document.getElementById('totalCount').textContent = tasks.length;

            // Velocity (tasks per week)
            const velocity = calculateVelocity();
            document.getElementById('velocityValue').textContent = velocity.toFixed(1);

            // Average Cycle Time
            const cycleTime = calculateAverageCycleTime();
            document.getElementById('cycleTimeValue').textContent = cycleTime.toFixed(1);

            // Completion Rate
            const completionRate = tasks.length > 0 ? ((done / tasks.length) * 100).toFixed(0) : 0;
            document.getElementById('completionRate').textContent = completionRate + '%';
        }

        // Calculate velocity (tasks per week)
        function calculateVelocity() {
            const sevenDaysAgo = new Date();
            sevenDaysAgo.setDate(sevenDaysAgo.getDate() - 7);

            const completedLastWeek = tasks.filter(t => {
                if (t.status !== 'done') return false;
                const completedDate = new Date(t.completedAt || t.createdAt);
                return completedDate >= sevenDaysAgo;
            }).length;

            return completedLastWeek;
        }

        // Calculate average cycle time
        function calculateAverageCycleTime() {
            const completedTasks = tasks.filter(t => t.status === 'done' && t.createdAt && t.completedAt);

            if (completedTasks.length === 0) return 0;

            const totalDays = completedTasks.reduce((sum, task) => {
                const start = new Date(task.createdAt);
                const end = new Date(task.completedAt);
                const days = (end - start) / (1000 * 60 * 60 * 24);
                return sum + days;
            }, 0);

            return totalDays / completedTasks.length;
        }

        // Generate smart alerts
        function generateAlerts() {
            const alertsContainer = document.getElementById('alertsContainer');
            alertsContainer.innerHTML = '';

            const alerts = [];

            // Check for bottlenecks
            const inProgress = tasks.filter(t => t.status === 'inProgress').length;
            if (inProgress > 5) {
                alerts.push({
                    type: 'warning',
                    message: `‚ö†Ô∏è Bottleneck Alert: ${inProgress} tasks in progress. Consider limiting WIP.`
                });
            }

            // Check for blocked tasks
            const backlogReady = tasks.filter(t => t.status === 'backlogReady').length;
            if (backlogReady > 10) {
                alerts.push({
                    type: 'info',
                    message: `üìã ${backlogReady} tasks ready to implement. Consider moving them to To Do.`
                });
            }

            // Check velocity trend
            const velocity = calculateVelocity();
            if (velocity < 3) {
                alerts.push({
                    type: 'warning',
                    message: `üìâ Low velocity: Only ${velocity} tasks completed this week.`
                });
            } else if (velocity > 10) {
                alerts.push({
                    type: 'success',
                    message: `üöÄ High velocity: ${velocity} tasks completed this week! Great work!`
                });
            }

            // Check for stale tasks
            const staleTasks = tasks.filter(t => {
                if (t.status === 'done') return false;
                const created = new Date(t.createdAt);
                const now = new Date();
                const days = (now - created) / (1000 * 60 * 60 * 24);
                return days > 30;
            }).length;

            if (staleTasks > 0) {
                alerts.push({
                    type: 'danger',
                    message: `üïê ${staleTasks} tasks are older than 30 days. Review and update them.`
                });
            }

            // Render alerts
            if (alerts.length === 0) {
                alerts.push({
                    type: 'success',
                    message: '‚úÖ All systems green! No alerts at this time.'
                });
            }

            alerts.forEach(alert => {
                const div = document.createElement('div');
                div.className = `alert-item alert-${alert.type}`;
                div.textContent = alert.message;
                alertsContainer.appendChild(div);
            });
