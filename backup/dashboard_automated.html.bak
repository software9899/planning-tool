        // Lead Time Chart
        function createLeadTimeChart() {
            const canvas = document.getElementById('leadTimeChart');
            const ctx = canvas.getContext('2d');

            const completedTasks = tasks.filter(t => t.status === 'done' && t.createdAt && t.completedAt);
            const leadTimes = completedTasks.map(task => {
                const start = new Date(task.createdAt);
                const end = new Date(task.completedAt);
                return Math.round((end - start) / (1000 * 60 * 60 * 24));
            });

            // Group by ranges
            const ranges = { '0-3': 0, '4-7': 0, '8-14': 0, '15-30': 0, '30+': 0 };
            leadTimes.forEach(days => {
                if (days <= 3) ranges['0-3']++;
                else if (days <= 7) ranges['4-7']++;
                else if (days <= 14) ranges['8-14']++;
                else if (days <= 30) ranges['15-30']++;
                else ranges['30+']++;
            });

            if (charts.leadTime) charts.leadTime.destroy();

            charts.leadTime = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: Object.keys(ranges).map(r => r + ' days'),
                    datasets: [{
                        label: 'Tasks',
                        data: Object.values(ranges),
                        backgroundColor: '#667eea',
                        borderRadius: 6
