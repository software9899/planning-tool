# Planning Tool Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Database Configuration
# ============================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://postgres:postgres123@db:5432/planning_tool

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=planning_tool

# MongoDB Configuration (for Virtual Office)
MONGODB_URI=mongodb://mongodb:27017/virtual-office
MONGO_INITDB_DATABASE=virtual-office

# ============================================
# Application Configuration
# ============================================

# Backend API
BACKEND_PORT=8002
BACKEND_URL=http://backend:8002

# Frontend
FRONTEND_PORT=80

# Virtual Office
VIRTUAL_OFFICE_PORT=3000
NODE_ENV=production

# ============================================
# Security Configuration
# ============================================

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Session Secret
SESSION_SECRET=your-session-secret-change-this

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:3000

# ============================================
# Optional Services
# ============================================

# Redis (if using caching)
# REDIS_URL=redis://redis:6379

# Email Service (if using notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ============================================
# Development Settings
# ============================================

# Python
PYTHONUNBUFFERED=1

# Debug Mode (set to "false" in production)
DEBUG=true

# Log Level (debug, info, warning, error)
LOG_LEVEL=info

# ============================================
# External APIs
# ============================================

# AI Service (if using AI features)
# OPENAI_API_KEY=sk-your-api-key

# Other API keys
# GOOGLE_API_KEY=
# GITHUB_TOKEN=
