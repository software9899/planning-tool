{
  "manifest_version": 3,
  "name": "Planning Tool - Tab Manager",
  "version": "1.0.0",
  "description": "Manage browser tabs and bookmarks for Planning Tool",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:5173/*",
        "http://localhost:8080/*",
        "http://localhost:3000/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
